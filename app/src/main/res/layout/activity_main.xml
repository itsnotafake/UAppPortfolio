<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.devin.uappportfolio.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Applications"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:textSize="18dp"
        android:id="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:textSize="14dp"
        android:id="@+id/firstProjectButton"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:width="210dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock Hawk"
        android:textSize="14dp"
        android:id="@+id/secondProjectButton"
        android:layout_below="@+id/firstProjectButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:width="210dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:textSize="14dp"
        android:id="@+id/thirdProjectButton"
        android:layout_below="@+id/secondProjectButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:width="210dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Your App Material"
        android:textSize="14dp"
        android:id="@+id/fourthProjectButton"
        android:layout_below="@+id/thirdProjectButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:width="210dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Ubiquitous"
        android:textSize="14dp"
        android:id="@+id/fifthProjectButton"
        android:layout_below="@+id/fourthProjectButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:width="210dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone"
        android:textSize="14dp"
        android:id="@+id/sixthProjectButton"
        android:layout_below="@+id/fifthProjectButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:width="210dp"/>

</RelativeLayout>
